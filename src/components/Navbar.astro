---
import { Icon } from 'astro-icon';

const menu = [
  { nome: 'Reservas', texto: 'reservas' },
  { nome: 'Serviços', texto: 'servicos' },
  { nome: 'Cardápio', texto: 'cardapio' },
  { nome: 'Depoimentos', texto: 'depoimentos' },
];
const name = 'Cardapio Online';
---

<header class="container">
  <div class="navbar">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <Icon class="h-6 w-6" name="mdi:cart" />
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          {
            menu.map((item) => (
              <li class="font-bold">
                <a href={`#${item.texto}`}>{item.nome}</a>
              </li>
            ))
          }
        </ul>
      </div>
      <a class="btn btn-ghost normal-case text-xl">{name}</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        {
          menu.map((item) => (
            <li class="font-bold">
              <a href={`#${item.texto}`}>{item.nome}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="navbar-end">
      <a class="btn"
        >Meu Carrinho <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
          ></path></svg
        ></a
      >
    </div>
  </div>
</header>
